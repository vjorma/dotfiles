{
  "title": "Main Enter â†’ Shift+Enter with app exceptions",
  "rules": [
    {
      "description": "Main Enter becomes Shift+Enter except in Numbers, Keynote, Pages, Xcode, VSCode",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "return_or_enter" },
          "to": [
            { "key_code": "return_or_enter", "modifiers": ["shift"] }
          ],
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^com\\.apple\\.iWork\\.Numbers$",
                "^com\\.apple\\.iWork\\.Keynote$",
                "^com\\.apple\\.iWork\\.Pages$",
                "^com\\.apple\\.Xcode$",
                "^com\\.microsoft\\.VSCode$"
              ]
            }
          ]
        }
      ]
    }
  ]
}


